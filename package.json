{
  "name": "claude-remote-control",
  "displayName": "Claude Terminal With Remote Control",
  "description": "A VS Code extension with tabbed terminals with remote control",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:claude-remote-control.openTerminal"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-remote-control.openTerminal",
        "title": "Open Claude Tabbed Terminal"
      }
    ],
    "keybindings": [
      {
        "command": "claude-remote-control.openTerminal",
        "key": "cmd+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "claude-terminal-container",
          "title": "Claude Terminal",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "claude-terminal-container": [
        {
          "id": "claude-terminal-panel",
          "name": "Claude Terminal",
          "type": "webview",
          "when": "claudeTerminal.active"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.2.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^0.10.1"
  }
}
